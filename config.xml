<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns = "http://www.w3.org/ns/widgets"
    id = "nl.rebp.excellent"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    versionCode="5"
    version   = "1.0">

    <name>Excellentmps</name>

    <description>
        Excellent Manpower Services Employment Agency       
    </description>

    <author href="rebp.nl" email="r.e.bautista.prieto@hotmail.com">
        Rober Bautista
    </author>

    <gap:platform name="android" />
    <gap:platform name="ios" />

    <preference name="phonegap-version" value="3.6.0" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />

    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="disallowOverscroll" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="prerendered-icon" value="false" />
    
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
    <preference name="BackgroundColor" value="0xffffffff "/>
    <preference name="KeepRunning" value="true"/>

    <icon src="images/icons/ios/icon-57.png" gap:platform="ios" width="57" height="57" />
    <icon src="images/icons/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="images/icons/ios/icon-57-2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="images/icons/ios/icon-72-2x.png" gap:platform="ios" width="144" height="144" />
    <icon src="images/icons/ios/icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="images/icons/ios/icon-120.png" gap:platform="ios" width="120" height="120" />
    <icon src="images/icons/ios/icon-152.png" gap:platform="ios" width="152" height="152" />

    <icon src="images/icons/android/icon-ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="images/icons/android/icon-mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="images/icons/android/icon-hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="images/icons/android/icon-xhdpi.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="images/icons/android/icon-xxhdpi.png" gap:platform="android" gap:density="xxhdpi" />

    <gap:splash src="images/screens/ios/screen-iphone-portrait.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="images/screens/ios/screen-iphone-portrait-2x.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="images/screens/ios/screen-iphone-portrait-568h-2x.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="images/screens/ios/screen-ipad-portrait.png" gap:platform="ios" width="768" height="1024 " />
    <gap:splash src="images/screens/ios/screen-ipad-portrait-2x.png" gap:platform="ios" width="1536" height="2008" />

    <gap:splash src="images/screens/android/screen-ldpi-portrait.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="images/screens/android/screen-mdpi-portrait.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="images/screens/android/screen-hdpi-portrait.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="images/screens/android/screen-xhdpi-portrait.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="images/screens/android/screen-xhdpi-portrait.png" gap:platform="android" gap:density="xxhdpi" />

    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/network"/>

    <gap:plugin name="org.apache.cordova.camera"  />
    <gap:plugin name="org.apache.cordova.dialogs"  />
    <gap:plugin name="org.apache.cordova.device"  />
    <gap:plugin name="org.apache.cordova.network-information"  />
    <gap:plugin name="org.apache.cordova.console"  />
    <gap:plugin name="org.apache.cordova.inappbrowser"  />
    <gap:plugin name="org.apache.cordova.network-information"  />
    <gap:plugin name="org.apache.cordova.splashscreen"  />

    <access origin="*" subdomains="true" />


</widget>

